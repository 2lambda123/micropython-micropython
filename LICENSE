        /re15 (BSD-3-clause)
        /uzlib (Zlib)
    /lib
        /axtls (BSD-3-clause)
            /config
                /scripts
                    /config (GPL-2.0-or-later)
                /Rules.mak (GPL-2.0)
        /berkeley-db-1xx (BSD-4-clause)
